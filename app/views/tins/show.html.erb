<div class="banner-bottom-left-grids">
  <div class="single-left-grid">
    <h3><%= @tin.name %></h3>
    <p><%= @tin.viewcount %> view</p>
    <p><%= @tin.title %></p>
    <p>
    <% @tagdetails.each do |tagdetail| %>
    <% tag = tagdetail.tag %>
    <%= link_to tag.name, tag_path(tag) %>
    <% end %>
    </p>
    <p class="text"><%= @tin.content.html_safe %></p>
    </div>
  <% if user_signed_in? %>
    <div id="comment_form">
      <%= render "comments/comment_form" %>
    </div>
  <% end %>
  </div>
  <% if @comments == nil %>
    <p>No comment</p>
    <% else %>
    <div class="post">
    <div id="comments-list">
      <%= render partial: "comments/comments", collection: @comments, as: :comment %>
    </div>
    </div>
  <% end %>
</div>