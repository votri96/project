<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', admin_tag_path(tag), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_tag_path(tag), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_tag_path(tag), class: "btn-sm btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tags %>
<br>

<%= link_to 'New Tag', new_admin_tag_path, class: "btn btn-success" %>
