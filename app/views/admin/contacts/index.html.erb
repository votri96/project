<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.content %></td>
        <td><%= contact.status %></td>
        <td><%= link_to 'Show', admin_contact_path(contact), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_contact_path(contact), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_admin_contact_path, class: "btn btn-success" %>
