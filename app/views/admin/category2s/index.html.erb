<p id="notice"><%= notice %></p>

<h1>Category2s</h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category2s.each do |category2| %>
      <tr>
        <td><%= category2.name %></td>
        <td><%= category2.category1.name %></td>
        <td><%= link_to 'Show', admin_category2_path(category2), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_category2_path(category2), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_category2_path(category2), class: "btn-sm btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @category2s %>

<br>

<%= link_to 'New Category2', new_admin_category2_path, class: "btn btn-success" %>
