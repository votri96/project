<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Show', admin_role_path(role), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_role_path(role), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_role_path(role), class: "btn-sm btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @roles %>
<br>

<%= link_to 'New Role', new_admin_role_path, class: "btn btn-success" %>
