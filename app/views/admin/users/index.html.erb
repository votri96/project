<p id="notice"><%= notice %></p>

<h1>Users </h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Username</th>
      <th>Address</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone %></td>
        <td><%= user.status %></td>
        <td><%= user.role.name %></td>
        <td><%= link_to 'Show', admin_user_path(user), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), class: "btn-sm btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
<br>

<%= link_to 'New User', new_admin_user_path, class: "btn btn-success" %>
